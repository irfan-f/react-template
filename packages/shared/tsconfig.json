{
  "compilerOptions": {
    "target": "es6", // Specify the ECMAScript target version
    "module": "commonjs", // Specify the module system
    "outDir": "./dist", // Specify the output directory for compiled files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "resolveJsonModule": true, // Enable importing JSON files
    "sourceMap": true, // Generate source maps for debugging
    "typeRoots": ["./types"],
  },
  "include": [
    "src/**/*.ts" // Specify the files to include in compilation
  ],
  "exclude": [
    "node_modules" // Specify the files to exclude from compilation
  ]
}